[Unit]
Description=arrowhead-reputationmanager
After=network.target mysql.target

[Service]
WorkingDirectory=/etc/arrowhead/systems/reputationmanager
ExecStart=/usr/bin/java -Dlog4j.configurationFile=file:/etc/arrowhead/systems/reputationmanager/log4j2.xml -jar /usr/share/arrowhead/reputationmanager/arrowhead-reputationmanager.jar
TimeoutStopSec=5
Restart=on-failure
RestartSec=20s
Type=simple
User=arrowhead
Group=arrowhead

[Install]
WantedBy=default.target
